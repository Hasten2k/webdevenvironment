{
  "name": "webdevenvironment",
  "version": "1.0.0",
  "description": "A template for web development projects",
  "main": "index.js",
  "scripts": {
    "// HTML Scripts": "-------------------------------------------",
    "pug": "pug src/pug -o dist/ --path src/pug/**/*.pug",
    "// CSS Scripts": "-------------------------------------------",
    "scss": "node-sass --output-style expanded --indent-type spaces --indent-width 2 --output dist/css src/scss",
    "stylus": "stylus src/stylus --include src/stylus/**/*.styl --out dist/css",
    "postcss": "postcss dist/css/*.css -r -m --use autoprefixer",
    "// Linters": "-------------------------------------------",
    "lint:pug": "pug-lint -c .pug-lintrc.json src/pug",
    "// Watchers": "-------------------------------------------",
    "watch": "npm-run-all -n -p watch:*",
    "watch:stylus": "npm run stylus -- -w",
    "watch:pug": "npm run pug -- -w",
    "// Tests": "-------------------------------------------",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Carl St√•lhem <carl@stalhem.se>",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.5.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "pug": "^2.0.3",
    "pug-cli": "https://github.com/pugjs/pug-cli#master",
    "stylus": "^0.54.5",
    "uglifycss": "^0.0.29"
  },
  "dependencies": {
    "pug-lint": "^2.5.0"
  }
}
